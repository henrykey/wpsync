{
  "name": "wpsync",
  "productName": "wpsync",
  "version": "0.1.0",
  "website": "http://www.joinkey.com/",
  "icon": "img/icons/icon.png",
  "description": "Sync app for Joinkey WIM Packhouse",
  "electronVersion": "1.4.13",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build:osx1": "electron-packager . $npm_package_productName --out=dist --platform=darwin --arch=x64 --version=0.1.0 --icon=./img/icons/Icon.icns",
    "build": "npm run build:osx && npm run build:win && npm run build:linux",
    "build:osx": "electron-packager . $npm_package_productName --out=dist --ignore='^/dist$' --overwrite --prune --asar --arch=all --platform=darwin --icon=./img/icons/Icon.icns --version=$npm_package_electronVersion --app-version=$npm_package_version",
    "build:mywin": "build --win",
    "build:win": "electron-packager . $npm_package_productName --out=dist --arch=all --platform=win32 --ignore='^/dist$' --prune --asar --overwrite --icon=./img/icons/IconTemplate.png --version=$npm_package_electronVersion --app-version=$npm_package_version",
    "build:linux": "electron-packager . $npm_package_productName --out=dist --arch=all --platform=linux --ignore='^/dist$' --prune --asar --overwrite --icon=./assets/app.png --version=$npm_package_electronVersion --app-version=$npm_package_version",
    "package": "npm run package:win32 && npm run package:win64 && npm run package:osx && npm run package:linux",
    "package:win64": "electron-builder dist/wpsync-win32-x64/ --platform=win --out=dist --config=config.json && mv 'dist/wpsync Setup.exe' dist/wpsync_Windows64.exe",
    "package:win32": "electron-builder dist/wpsync-win32-ia32/ --platform=win --out=dist --config=config.json && mv 'dist/wpsync Setup.exe' dist/wpsync_Windows32.exe",
    "package:osx": "hdiutil create -format UDZO -srcfolder dist/wpsync-darwin-x64/wpsync.app dist/wpsync_Mac.dmg",
    "package:linux": "cd dist/ && zip -r wpsync_Linux_x64.zip wpsync-linux-x64 && zip -r wpsync_Linux_ia32.zip wpsync-linux-ia32 && cd ../",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Joinkey Sofware Co.",
  "license": "ISC",
"build": {
    "appId": "joinkey.com.cn",
    "category": "public.app-category.files-sync",
    "win":{
      "target":"nsis"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },  
  "dependencies": {
    "form-data": "^2.1.2",
    "fs.notify": "0.0.4",
    "menubar": "^5.2.0",
    "moment": "^2.17.1",
    "node-schedule": "^1.2.0",
    "request": "^2.79.0"
  },
  "devDependencies": {
    "devtron": "^1.3.0",
    "electron-builder": "^10.8.1",
    "electron-installer-dmg": "0.1.2",
    "electron-packager": "^8.5.0",
    "electron": "^1.4.13",
    "standard": "^8.3.0"
  }
}
